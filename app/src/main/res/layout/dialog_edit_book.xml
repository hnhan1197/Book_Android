<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="Quản lý Sách"
        android:textStyle="bold"
        android:textSize="28sp" />
    <EditText
        android:id="@+id/dialogInputBookID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mã sách"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="8dp"
        android:inputType="text"
        android:minHeight="48dp" />
    <EditText
        android:id="@+id/dialogInputBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tên sách"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="8dp"
        android:inputType="text"
        android:minHeight="48dp" />
    <EditText
        android:id="@+id/dialogInputBookImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Đường dẫn ảnh"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="8dp"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/dialogInputBookDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="Miêu tả sách"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:inputType="textMultiLine"
        android:lines="5"
        android:gravity="top|start"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/dialogInputBookPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Giá tiền"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="8dp"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/dialogEditBook"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:text="Sửa"/>
</LinearLayout>